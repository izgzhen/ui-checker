.decl layout_constraintStart_toEndOf(u: ViewID, x: IdName)
.input layout_constraintStart_toEndOf

.decl layout_constraintEnd_toEndOf(u: ViewID, x: IdName)
.input layout_constraintEnd_toEndOf

