.input layout_constraintBottom_toBottomOf

.decl layout_constraintTop_toTopOf(u: ViewID, x: IdName)
.input layout_constraintTop_toTopOf

// Hierarchical relationship between views
.decl containsView(v: ViewID, u: ViewID)
